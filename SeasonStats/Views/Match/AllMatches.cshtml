<h1>SeasonStats matches list</h1>
<table>
    <thead>
        <tr>
            <th scope="col">Player 1</th>
            <th scope="col" colspan="2">Score</th>
            <th scope="col">Player 2<th>
        </tr>
    </thead>
    <tbody>
            @foreach (var match in ViewBag.Matches)
            {
                <tr>
                    <td>@(match.Player1.Name)</td>
                    <td>
                    @foreach (var set in match.Sets)
                    {
                        <div>
                            <span>@(set.Player1Score)</span>
                            <strong>:</strong>
                            <span>@(set.Player2Score)</span>
                        </div>
                    }
                    </td>
                    <td>@(match.Player2.Name)</td>
                </tr>
            }
    </tbody>
</table>